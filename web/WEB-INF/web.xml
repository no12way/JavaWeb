        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>welcome</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>Filter1</filter-name>
        <filter-class>cw.javaweb.jsp.Filter1</filter-class>
    </filter>
